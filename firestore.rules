rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir que todos possam LER os chopps (para clientes verem no site)
    match /items/{itemId} {
      allow read: if true;
      allow write: if true;  // Permite escrita (você pode adicionar autenticação depois)
    }
    
    // Permitir leitura e escrita no histórico
    match /history/{historyId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
